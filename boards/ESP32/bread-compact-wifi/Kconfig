config CHIP_CHOICE
    string
    default "esp32s3"

config BOARD_CHOICE
    string
    default "bread-compact-wifi"

config BOARD_CONFIG
    bool
    default y
    select ENABLE_AUDIO
    select ENABLE_DISPLAY
    select PLATFORM_FLASHSIZE_16M

config AUDIO_DRIVER_NAME
    string "the name of the audio driver"
    default "audio_driver"

choice
    prompt "OLED choice"
    default OLED_128x32

    config OLED_128x32
        bool "OLED 128x32"
        help
            OLED 128x32

    config OLED_128x64
        bool "OLED 128x64"
        help
            OLED 128x64
endchoice